{
  "integrations": {
  "collaboration_tool": {
      "credential": "slack-demo"
    }
  },
  "update_behavior": {
    "auto_start_updates": "no",
    "skip_manual_testing": "no",
    "source_branch": "new2",
    "destination_branch": "updates/[task:id]",
    "handle_packages": "dev_and_prod",
    "create_tasks_for": "all_packages"
  },
  "events": {
    "new_updates_available": [
      {
        "sendmessage": {
          "title": "New updates available for \"[project:name]\"",
          "message": "We've found the new updates for your project.\n\nThe packages:\n[task:packages|, ][package:name]: [package:current-version] â†’ [package:new-version][/task:packages]",
          "color": "#998877"
        }
      }
    ],
    "ready_to_test": [
      {
        "sendmail": {
          "emails": "[user:email]",
          "subject": "A task for [project:name] is ready for testing",
          "message": "[snippet:workflow.event.ready-to-test]",
          "cc": "",
          "bcc": ""
        }
      }
    ],
    "failed": [
      {
        "sendmail": {
          "emails": "[user:email]",
          "subject": "A task error occurred in [project:name]",
          "message": "[snippet:workflow.event.failed]",
          "cc": "",
          "bcc": ""
        }
      }
    ]
  }
}
